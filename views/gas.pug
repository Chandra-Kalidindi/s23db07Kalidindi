extends layout

block content
  h1= title
  - let items = results
  - let destination = `dispatch(\"/gas/create\")`
   button.btn( class="btn-primary ml-1", onclick= destination) Create
  div(claass="container-fluid mt-3")
   div(class="row m-1")
    each item,index in items
     - let destination1 = `dispatch(\"/gas/update?id=${item._id}\")`
     - let destination2 = `dispatch(\"/gas/delete?id=${item._id}\")`
     - let destination3 = `dispatch(\"/gas/detail?id=${item._id}\")`
     div(class="col-sm-3 bg-info m-2 p-4" onclick=`buy(${index})`) #{item.gas_name} - #{item.quantity } - #{item.types}
      button.btn( class="btn-primary ml-1", onclick= destination1) Update
      button.btn( class="btn-primary ml-1", onclick= destination2) Delete
      button.btn( class="btn-primary ml-1", onclick= destination3) Detail
  script.
   function buy(itemNo)
   {
     alert(`You purchased Item ${itemNo+1}`)
   }
   function dispatch(path)
   {
     window.location.href=path
   }